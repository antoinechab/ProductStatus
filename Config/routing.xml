<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="productstatus.save" path="/admin/module/ProductStatus/save">
        <default key="_controller">ProductStatus\Controller\ConfigurationController::saveChanges</default>
    </route>

    <route id="productstatus.delete" path="/admin/module/ProductStatus/delete/{id}">
        <default key="_controller">ProductStatus\Controller\ConfigurationController::delete</default>
        <requirement key="id">[0-9A-Z]+</requirement>
    </route>

    <route id="productstatus.edit" path="/admin/module/ProductStatus/edit/{id}">
        <default key="_controller">ProductStatus\Controller\ConfigurationController::edit</default>
        <requirement key="id">[0-9A-Z]+</requirement>
    </route>

</routes>
